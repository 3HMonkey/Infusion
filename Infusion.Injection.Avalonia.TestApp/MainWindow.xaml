<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Infusion.Injection.Avalonia.TestApp.MainWindow"
        Title="Infusion.Injection.Avalonia.TestApp">
  <StackPanel>
    <StackPanel Orientation="Horizontal">
      <TextBlock>Object name:</TextBlock>
      <TextBox Name="ObjectName" Width="100" />
      <TextBlock>Object id:</TextBlock>
      <TextBox Name="ObjectId" Width="100" />
      <Button Name="AddObjectButton">Add</Button>
      <Button Name="RemoveObjectButton">Remove</Button>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <TextBlock>Script name:</TextBlock>
      <TextBox Name="ScriptName" Width="100" />
      <Button Name="AddRunning">Add running</Button>
      <Button Name="AddAvailable">Add available</Button>
      <Button Name="RemoveRunning">Remove running</Button>
      <Button Name="RemoveAvailable">Remove available</Button>
    </StackPanel>
  </StackPanel>
</Window>
