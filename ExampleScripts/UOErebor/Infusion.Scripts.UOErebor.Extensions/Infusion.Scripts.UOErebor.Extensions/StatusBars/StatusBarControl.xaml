<UserControl x:Class="Infusion.Scripts.UOErebor.Extensions.StatusBars.StatusBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Infusion.Scripts.UOErebor.Extensions.StatusBars"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" x:ClassModifier="internal">
    <Button BorderThickness="0" Click="OnClick"  
            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
        <Image x:Name="_image" Stretch="None" />
    </Button>
</UserControl>
