<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Infusion.Injection.Avalonia.Main.MainControl">
    <ListBox Margin="5 5 5 5">
      <ListBox.Items>
        <ListBoxItem>
          <CheckBox IsChecked="{Binding Light}">Light</CheckBox>
        </ListBoxItem>
        <ListBoxItem>
          <CheckBox IsChecked="{Binding AutoOpenGui}">Open Injection Window after start</CheckBox>
        </ListBoxItem>
        <ListBoxItem>
          <CheckBox IsChecked="{Binding AlwaysOnTop}">Always on top</CheckBox>
        </ListBoxItem>
      </ListBox.Items>
    </ListBox>
</UserControl>
